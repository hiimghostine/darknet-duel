@startuml
' User Registration - ER Diagram
entity "Account" as Account {
  * id : uuid <<PK>>
  * email : string <<UQ>>
  * username : string <<UQ>>
  * password : string
  * type : enum (user, mod, admin)
  * isActive : boolean
  * inactiveReason : string
  * lastLogin : datetime
  * gamesPlayed : int
  * gamesWon : int
  * gamesLost : int
  * rating : int
  * bio : string
  * avatar : blob
  * avatarMimeType : string
  * creds : int
  * crypts : int
  * decoration : string
  * createdAt : datetime
  * updatedAt : datetime
}
@enduml 