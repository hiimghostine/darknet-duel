/* Balatro-Inspired Layout for Darknet Duel */
/* Clean, centered card game layout with cyberpunk aesthetics using DaisyUI */

.balatro-game-container {
  min-height: 100vh;
  background-color: hsl(var(--b1));
  color: hsl(var(--bc));
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
  font-family: 'Roboto Mono', monospace;
}

/* Background effects - matching dashboard */
.balatro-game-container::before {
  content: '';
  position: absolute;
  inset: 0;
  background-image: linear-gradient(
    to right,
    rgba(var(--p), 0.05) 1px,
    transparent 1px
  ),
  linear-gradient(
    to bottom,
    rgba(var(--p), 0.05) 1px,
    transparent 1px
  );
  background-size: 20px 20px;
  pointer-events: none;
}

/* Header bar - matching dashboard style */
.balatro-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem 1.5rem;
  background-color: hsl(var(--b2) / 0.8);
  border-bottom: 1px solid hsl(var(--p) / 0.2);
  backdrop-filter: blur(10px);
  z-index: 100;
}

.balatro-header h1 {
  color: hsl(var(--p));
  font-size: 1.125rem;
  font-weight: bold;
  text-shadow: 0 0 10px hsl(var(--p) / 0.5);
  margin: 0;
  font-family: 'Roboto Mono', monospace;
  letter-spacing: 1px;
  text-transform: uppercase;
}

.balatro-header-controls {
  display: flex;
  gap: 0.5rem;
}

.balatro-btn {
  @apply btn btn-sm;
  background-color: hsl(var(--b3) / 0.8);
  border-color: hsl(var(--p) / 0.3);
  color: hsl(var(--p));
  font-family: 'Roboto Mono', monospace;
  font-weight: bold;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.balatro-btn:hover {
  background-color: hsl(var(--p) / 0.1);
  border-color: hsl(var(--p));
  color: hsl(var(--p));
  box-shadow: 0 0 10px hsl(var(--p) / 0.3);
}

/* Main game area */
.balatro-main {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16px;
  padding: 16px;
  max-width: 1400px;
  margin: 0 auto;
  width: 100%;
  min-height: 0; /* Important for flex children */
}

/* Game content wrapper */
.balatro-game-content {
  display: flex;
  gap: 16px;
  flex: 1;
  min-height: 0;
}

/* Opponent area (top) - cyberpunk panel style */
.balatro-opponent-area {
  display: flex;
  justify-content: center;
  align-items: flex-end;
  gap: 1rem;
  padding: 1rem;
  background: hsl(var(--er) / 0.05);
  border: 1px solid hsl(var(--er) / 0.2);
  border-radius: 0.5rem;
  position: relative;
  height: 160px;
  order: 1;
}

.balatro-opponent-area::before,
.balatro-opponent-area::after {
  content: '';
  position: absolute;
  width: 12px;
  height: 12px;
  border-color: hsl(var(--er));
}

.balatro-opponent-area::before {
  top: -1px;
  left: -1px;
  border-top: 1px solid;
  border-left: 1px solid;
}

.balatro-opponent-area::after {
  bottom: -1px;
  right: -1px;
  border-bottom: 1px solid;
  border-right: 1px solid;
}

.balatro-opponent-info {
  position: absolute;
  top: 0.5rem;
  left: 1rem;
  color: hsl(var(--er));
  font-size: 0.875rem;
  font-weight: bold;
  font-family: 'Roboto Mono', monospace;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.balatro-opponent-hand {
  display: flex;
  align-items: flex-end;
}

.balatro-opponent-hand .balatro-card-back:not(:first-child) {
  margin-left: -20px; /* Overlapping cards like Balatro */
}

.balatro-card-back {
  width: 80px;
  height: 110px;
  @apply bg-base-300 border border-error rounded-lg;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.4);
  position: relative;
  transform: rotateY(0deg);
  transition: all 0.3s ease;
}

.balatro-card-back:hover {
  transform: translateY(-10px);
  z-index: 10;
  box-shadow: 0 0 15px hsl(var(--er) / 0.3);
}

.balatro-card-back::before {
  content: '?';
  color: hsl(var(--er));
  font-size: 1.5rem;
  font-weight: bold;
  text-shadow: 0 0 5px hsl(var(--er) / 0.5);
  font-family: 'Roboto Mono', monospace;
}

/* Side panels - matching dashboard panels */
.balatro-left-panel,
.balatro-right-panel {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  width: 250px;
  flex-shrink: 0;
}

.balatro-info-panel {
  @apply bg-base-200 border border-primary/20 rounded-lg p-4;
  backdrop-filter: blur(5px);
  position: relative;
}

/* Corner brackets like dashboard */
.balatro-info-panel::before,
.balatro-info-panel::after {
  content: '';
  position: absolute;
  width: 12px;
  height: 12px;
  border-color: hsl(var(--p));
}

.balatro-info-panel::before {
  top: -1px;
  left: -1px;
  border-top: 1px solid;
  border-left: 1px solid;
}

.balatro-info-panel::after {
  bottom: -1px;
  right: -1px;
  border-bottom: 1px solid;
  border-right: 1px solid;
}

.balatro-info-panel h3 {
  color: hsl(var(--p));
  font-size: 0.875rem;
  margin: 0 0 0.75rem 0;
  text-transform: uppercase;
  letter-spacing: 1px;
  font-family: 'Roboto Mono', monospace;
  font-weight: bold;
}

.balatro-score-display {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0.5rem 0;
}

.balatro-score-value {
  font-size: 1.5rem;
  font-weight: bold;
  color: hsl(var(--p));
  text-shadow: 0 0 5px hsl(var(--p) / 0.3);
  font-family: 'Roboto Mono', monospace;
}

.balatro-vs-divider {
  color: hsl(var(--bc) / 0.5);
  font-size: 1rem;
  font-family: 'Roboto Mono', monospace;
}

/* Central game area */
.balatro-center-column {
  display: flex;
  flex-direction: column;
  gap: 16px;
  flex: 1;
  min-height: 0;
}

/* Central infrastructure area - dashboard style */
.balatro-infrastructure {
  @apply bg-base-200 border border-primary/30 rounded-xl p-5;
  backdrop-filter: blur(10px);
  position: relative;
  flex: 1;
  min-height: 300px;
  order: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.balatro-infrastructure::before {
  content: 'NETWORK_GRID';
  position: absolute;
  top: -10px;
  left: 50%;
  transform: translateX(-50%);
  background: hsl(var(--b2));
  color: hsl(var(--p));
  padding: 0.25rem 1rem;
  border: 1px solid hsl(var(--p) / 0.3);
  border-radius: 0.75rem;
  font-size: 0.75rem;
  font-weight: bold;
  letter-spacing: 1px;
  font-family: 'Roboto Mono', monospace;
  text-transform: uppercase;
}

/* Corner brackets for infrastructure */
.balatro-infrastructure::after {
  content: '';
  position: absolute;
  top: -1px;
  right: -1px;
  width: 12px;
  height: 12px;
  border-top: 1px solid hsl(var(--p));
  border-right: 1px solid hsl(var(--p));
}

.balatro-infrastructure-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
  justify-content: center;
  align-items: center;
  max-width: 100%;
}

.balatro-infrastructure-card {
  width: 120px;
  height: 140px;
  @apply bg-base-300 border border-primary rounded-lg p-2;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  transition: all 0.3s ease;
  cursor: pointer;
  font-size: 0.625rem;
  color: hsl(var(--bc));
  font-family: 'Roboto Mono', monospace;
  position: relative;
}

.balatro-infrastructure-card:hover {
  transform: translateY(-5px) scale(1.05);
  box-shadow: 0 8px 16px hsl(var(--p) / 0.3);
  z-index: 5;
}

.balatro-infrastructure-card.compromised {
  @apply border-error;
  box-shadow: 0 0 10px hsl(var(--er) / 0.3);
}

.balatro-infrastructure-card.fortified {
  @apply border-success;
  box-shadow: 0 0 10px hsl(var(--su) / 0.3);
}

/* Target mode styling for infrastructure cards */
.balatro-infrastructure-card.targetable {
  @apply border-warning;
  box-shadow: 0 0 15px hsl(var(--wa) / 0.5);
  transform: scale(1.05);
  animation: pulse-target 2s infinite;
}

.balatro-infrastructure-card.selected {
  @apply border-accent;
  box-shadow: 0 0 20px hsl(var(--ac) / 0.7);
  transform: scale(1.1);
  z-index: 10;
}

@keyframes pulse-target {
  0%, 100% {
    box-shadow: 0 0 15px hsl(var(--wa) / 0.5);
  }
  50% {
    box-shadow: 0 0 25px hsl(var(--wa) / 0.8);
  }
}

/* Target indicator */
.balatro-target-indicator {
  position: absolute;
  bottom: 2px;
  left: 50%;
  transform: translateX(-50%);
  background: hsl(var(--wa));
  color: hsl(var(--wac));
  padding: 2px 6px;
  border-radius: 4px;
  font-size: 0.5rem;
  font-weight: bold;
  text-align: center;
  animation: blink 1s infinite;
}

@keyframes blink {
  0%, 50% { opacity: 1; }
  51%, 100% { opacity: 0.3; }
}

/* Player area (bottom) - cyberpunk panel style */
.balatro-player-area {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  gap: 1rem;
  padding: 1rem;
  background: hsl(var(--p) / 0.05);
  border: 1px solid hsl(var(--p) / 0.2);
  border-radius: 0.5rem;
  position: relative;
  height: 180px;
  order: 3;
}

.balatro-player-area::before,
.balatro-player-area::after {
  content: '';
  position: absolute;
  width: 12px;
  height: 12px;
  border-color: hsl(var(--p));
}

.balatro-player-area::before {
  top: -1px;
  left: -1px;
  border-top: 1px solid;
  border-left: 1px solid;
}

.balatro-player-area::after {
  bottom: -1px;
  right: -1px;
  border-bottom: 1px solid;
  border-right: 1px solid;
}

.balatro-player-info {
  position: absolute;
  top: 0.5rem;
  left: 1rem;
  color: hsl(var(--p));
  font-size: 0.875rem;
  font-weight: bold;
  font-family: 'Roboto Mono', monospace;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.balatro-player-hand {
  display: flex;
  gap: 8px;
  align-items: flex-start;
  flex-wrap: wrap;
  justify-content: center;
  max-width: 800px;
}

.balatro-player-card {
  width: 100px;
  height: 130px;
  @apply bg-base-300 border border-primary rounded-lg p-2;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  transition: all 0.3s ease;
  cursor: pointer;
  font-size: 0.6875rem;
  color: hsl(var(--bc));
  font-family: 'Roboto Mono', monospace;
}

.balatro-player-card:hover {
  transform: translateY(-15px) scale(1.1);
  box-shadow: 0 10px 20px hsl(var(--p) / 0.4);
  z-index: 10;
  border-color: hsl(var(--bc));
}

.balatro-player-card.selected {
  transform: translateY(-10px) scale(1.05);
  @apply border-warning;
  box-shadow: 0 0 20px hsl(var(--wa) / 0.5);
}

.balatro-player-card.playable {
  @apply border-success;
  box-shadow: 0 0 8px hsl(var(--su) / 0.3);
}

.balatro-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.balatro-card-cost {
  width: 20px;
  height: 20px;
  background: #444;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 10px;
  font-weight: bold;
  color: #36f1cd;
}

.balatro-card-name {
  font-size: 0.5625rem;
  font-weight: bold;
  text-align: center;
  margin: 0.25rem 0;
  color: hsl(var(--p));
  font-family: 'Roboto Mono', monospace;
}

.balatro-card-type {
  font-size: 0.5rem;
  color: hsl(var(--bc) / 0.6);
  text-transform: uppercase;
  margin-bottom: 0.25rem;
  font-family: 'Roboto Mono', monospace;
}

.balatro-card-description {
  font-size: 0.5rem;
  color: hsl(var(--bc) / 0.8);
  flex: 1;
  overflow: hidden;
  font-family: 'Roboto Mono', monospace;
  line-height: 1.2;
}

.balatro-card-power {
  text-align: center;
  font-size: 0.625rem;
  font-weight: bold;
  color: hsl(var(--p));
  margin-top: 0.25rem;
  font-family: 'Roboto Mono', monospace;
}

/* Card type colors - using DaisyUI semantic colors */
.balatro-player-card.attacker {
  border-left: 3px solid hsl(var(--er));
}

.balatro-player-card.defender {
  border-left: 3px solid hsl(var(--p));
}

.balatro-player-card.wildcard {
  border-left: 3px solid hsl(var(--wa));
}

/* Game actions */
.balatro-actions {
  position: absolute;
  bottom: 8px;
  right: 16px;
  display: flex;
  gap: 8px;
}

/* Processing overlay */
.balatro-processing {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.balatro-processing-content {
  background: rgba(20, 26, 38, 0.95);
  border: 1px solid #36f1cd;
  border-radius: 8px;
  padding: 24px;
  text-align: center;
  color: #36f1cd;
}

.balatro-spinner {
  width: 40px;
  height: 40px;
  border: 3px solid rgba(54, 241, 205, 0.3);
  border-top: 3px solid #36f1cd;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 16px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Responsive design */
@media (max-width: 1200px) {
  .balatro-left-panel,
  .balatro-right-panel {
    width: 200px;
  }
  
  .balatro-player-card,
  .balatro-card-back {
    width: 80px;
    height: 110px;
  }
}

@media (max-width: 768px) {
  .balatro-game-content {
    flex-direction: column;
  }
  
  .balatro-left-panel,
  .balatro-right-panel {
    width: auto;
    flex-direction: row;
    overflow-x: auto;
    order: 4;
  }
  
  .balatro-center-column {
    order: 1;
  }
  
  .balatro-player-hand {
    gap: 4px;
  }
  
  .balatro-player-card {
    width: 70px;
    height: 95px;
    font-size: 9px;
  }
}

/* Animation for card deals */
@keyframes cardDeal {
  0% {
    opacity: 0;
    transform: translateY(-100px) rotateX(90deg);
  }
  100% {
    opacity: 1;
    transform: translateY(0) rotateX(0deg);
  }
}

.balatro-player-card,
.balatro-card-back {
  animation: cardDeal 0.5s ease-out;
}

/* Pulse effect for active turn */
@keyframes balatro-pulse {
  0%, 100% {
    box-shadow: 0 0 5px rgba(54, 241, 205, 0.3);
  }
  50% {
    box-shadow: 0 0 20px rgba(54, 241, 205, 0.6);
  }
}

.balatro-player-area.active-turn {
  animation: balatro-pulse 2s infinite;
}

.balatro-opponent-area.active-turn {
  animation: balatro-pulse 2s infinite;
} 